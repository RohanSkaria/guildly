<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Habit icon on the left -->
    <ImageView
        android:id="@+id/ivHabitIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_workout"
        android:contentDescription="@string/habit_icon" />

    <!-- Name & streak in a vertical column -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvHabitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habit Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHabitStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ 0 days"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
