<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvAvatarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Avatar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAvatarSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload a profile picture to personalize your account"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvAvatarTitle" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfilePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/unknown_profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#5C6BC0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAvatarSubtitle" />

    <Button
        android:id="@+id/btnSelectPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Choose Image"
        android:drawableStart="@drawable/unknown_profile"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewProfilePic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This step is optional. You can always add a profile picture later."
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/btnSelectPic" />

</androidx.constraintlayout.widget.ConstraintLayout>