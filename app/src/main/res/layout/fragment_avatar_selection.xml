<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FDF6E3">

    <TextView
        android:id="@+id/tvAvatarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHOOSE YOUR AVATAR"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_black"
        android:textColor="#1B1F3B"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAvatarSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload a profile picture to personalize your account"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_black"
        android:textColor="#757575"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvAvatarTitle" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfilePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/unknown_profile"
        app:civ_border_width="4dp"
        app:civ_border_color="#1B1F3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAvatarSubtitle" />

    <Button
        android:id="@+id/btnSelectPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="CHOOSE IMAGE"
        android:fontFamily="@font/montserrat_black"
        android:textSize="16sp"
        android:backgroundTint="#1B1F3B"
        android:textColor="#FFFFFF"
        android:drawableStart="@drawable/unknown_profile"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewProfilePic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This step is optional. You can always add a profile picture later."
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_black"
        android:textColor="#757575"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/btnSelectPic" />

</androidx.constraintlayout.widget.ConstraintLayout>
