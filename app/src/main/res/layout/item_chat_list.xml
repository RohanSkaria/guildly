<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageFriendAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/unknown_profile"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_button"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/textFriendUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageFriendAvatar"
            android:layout_marginStart="12dp"
            android:text="Friend Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333" />

        <TextView
            android:id="@+id/textTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:45 PM"
            android:textSize="12sp"
            android:textColor="#888"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/textFriendUsername" />

        <TextView
            android:id="@+id/textLastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textFriendUsername"
            android:layout_toEndOf="@id/imageFriendAvatar"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Hey, howâ€™s it going?"
            android:textSize="14sp"
            android:textColor="#666" />

        <ImageView
            android:id="@+id/imageUnreadIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/textLastMessage"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_email"
            android:visibility="gone" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>