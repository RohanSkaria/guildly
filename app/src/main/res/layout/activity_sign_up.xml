<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back to Login Button at Top -->
        <Button
            android:id="@+id/buttonBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:layout_marginBottom="8dp" />

        <!-- Username -->
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username" />

        <!-- About Me (2 lines) -->
        <EditText
            android:id="@+id/editTextAboutMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="About Me (short bio)"
            android:inputType="textMultiLine"
            android:lines="2" />

        <!-- Email -->
        <EditText
            android:id="@+id/editTextEmailSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <!-- Password -->
        <EditText
            android:id="@+id/editTextPasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/editTextConfirmPasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <!-- Profile Pic Section -->
        <ImageView
            android:id="@+id/imageViewProfilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <Button
            android:id="@+id/buttonSelectPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Profile Picture" />

        <!-- Habits Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Habits to Track:"
            android:layout_marginTop="12dp" />

        <!-- 2-Column Layout for 8 CheckBoxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- First Column (4 Checkboxes) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBoxDrinkWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drink Water" />

                <CheckBox
                    android:id="@+id/checkBoxWorkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout" />

                <CheckBox
                    android:id="@+id/checkBoxHomework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homework" />

                <CheckBox
                    android:id="@+id/checkBoxReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reading" />
            </LinearLayout>

            <!-- Second Column (4 Checkboxes) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBoxMeditating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meditating" />

                <CheckBox
                    android:id="@+id/checkBoxSavingMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saving Money" />

                <CheckBox
                    android:id="@+id/checkBoxEatingHealthy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eating Healthy" />

                <CheckBox
                    android:id="@+id/checkBoxNoPhoneAfter10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Phone After 10" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
