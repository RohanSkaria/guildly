<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1) CONNECTIONS HEADER -->
        <TextView
            android:id="@+id/connections_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connections"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="32dp"
            android:paddingTop="16dp" />

        <!-- 2) INPUT FIELD FOR FRIEND USERNAME (Centered, 80% width, light purple with white text) -->
        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">
            <EditText
                android:id="@+id/editTextFriendUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="Type a friend's username to add them"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="#B39DDB"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- 3) HORIZONTAL CONTAINER FOR BUTTONS -->
        <LinearLayout
            android:id="@+id/topButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">
            <Button
                android:id="@+id/buttonAddFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Friend" />
            <!-- Wrap Friend Requests button in a FrameLayout to show a badge -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">
                <Button
                    android:id="@+id/buttonFriendRequests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friend Requests" />
                <TextView
                    android:id="@+id/friendRequestsBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_background"
                    android:textColor="@android:color/white"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_gravity="end|top"
                    android:translationX="8dp"
                    android:translationY="-4dp" />
            </FrameLayout>
        </LinearLayout>

        <!-- 4) HEADER FOR FRIENDS LIST -->
        <TextView
            android:id="@+id/friends_list_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Friends List"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <!-- 5) RECYCLERVIEW FOR FRIENDS LIST -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/connections_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingStart="32dp"/>

        <!-- 6) HEADER FOR GLOBAL LEADERBOARD -->
        <TextView
            android:id="@+id/global_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Global Leaderboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="32dp"
            android:paddingTop="16dp"/>

        <!-- 7) RECYCLERVIEW FOR LEADERBOARD -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
