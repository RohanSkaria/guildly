<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAF5FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title and Chat Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connections"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333" />

            <ImageView
                android:id="@+id/buttonOpenChatList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_envelope"
                android:contentDescription="Open Chat List"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Input Field with Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/editTextFriendUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type a friend's username to add them"
                android:padding="12dp"
                android:background="@android:color/transparent"
                android:textColorHint="#888" />
        </androidx.cardview.widget.CardView>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/buttonAddFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Friend"
                android:backgroundTint="#7E57C2"
                android:textColor="@android:color/white"
                android:layout_marginEnd="16dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonFriendRequests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friend Requests"
                    android:backgroundTint="#9575CD"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/friendRequestsBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_background"
                    android:textColor="@android:color/white"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_gravity="end|top"
                    android:translationX="8dp"
                    android:translationY="-4dp" />
            </FrameLayout>
        </LinearLayout>

        <!-- Friends Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Friends"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:paddingBottom="8dp" />

        <!-- Friends List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/connections_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <!-- Leaderboard Header -->
        <TextView
            android:id="@+id/global_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Global Leaderboard"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:paddingBottom="8dp" />

        <!-- Leaderboard List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>